.user-cart-alt
    .container.user-cart-alt__container 

        .user-cart-alt__form-cart
            //- Доставка
            .product-ordering.product-ordering_alt.user-cart-alt__form
                .product-ordering__container

                    .logo-with-description.product-ordering__logo-with-description
                        .logo-with-description__wrapper

                            a.logo-with-description__link(href="/index.html") 
                                img.logo-with-description__img(src="./img/svg/icon-logo.svg" alt="")
                            p.logo-with-description__text Оформление заказа

                    form.product-ordering__form.js-product-ordering-form
                        .product-ordering__items
                            .ui-input3.product-ordering__item
                                input.ui-input3__input(type="text")
                                label.ui-input3__label Ваше имя

                            .ui-input3.product-ordering__item
                                input.ui-input3__input(type="text")
                                label.ui-input3__label Ваша фамилия

                            .ui-input3.product-ordering__item
                                input.ui-input3__input.js-imask-phone(type="text")
                                label.ui-input3__label Ваш телефон

                            .ui-input3.product-ordering__item.product-ordering__item_email
                                input.ui-input3__input(type="email")
                                label.ui-input3__label Ваш e-mail адрес

                            .product-ordering__item.product-ordering__item_delivery
                                .ui-radio.product-ordering__item.product-ordering__item_radio
                                    input(checked type="radio" name="selectDelivery" id="deliveryCarrier")
                                    label(for="deliveryCarrier") Доставка курьером 
                                        span 3-5 дней 
                                .ui-radio.product-ordering__item
                                    input(type="radio" name="selectDelivery" id="deliveryPickup")
                                    label(for="deliveryPickup") Самовывоз

                            .ui-input3.product-ordering__item.product-ordering__item_city.js-product-ordering-city
                                input.ui-input3__input(type="text")
                                label.ui-input3__label Ваш город

                            .ui-input3.product-ordering__item.product-ordering__item_street.js-product-ordering-street
                                input.ui-input3__input(type="text")
                                label.ui-input3__label Ваша улица

                            .product-ordering__item.product-ordering__item_address.js-product-ordering-address
                                .ui-input3.product-ordering__item
                                    input.ui-input3__input(type="text")
                                    label.ui-input3__label Ваша улица

                                .ui-input3.product-ordering__item
                                    input.ui-input3__input(type="text")
                                    label.ui-input3__label Картира

                            .ui-input3.ui-input3_textarea.product-ordering__item.product-ordering__item_comment
                                textarea.ui-input3__input
                                label.ui-input3__label Комментарий к заказу

                            .product-ordering__item.product-ordering__item_payment
                                .ui-radio.product-ordering__item.product-ordering__item_radio
                                    input(checked type="radio" name="selectPayment" id="paymentCart")
                                    label(for="paymentCart") Оплата картой
                                .ui-radio.product-ordering__item
                                    input(type="radio" name="selectPayment" id="paymentSelf")
                                    label(for="paymentSelf") Оплата при получении

                            .product-ordering__total
                                .product-ordering__total-item  
                                    p.product-ordering__total-key Доставка
                                    p.product-ordering__total-value 0₽
                                .product-ordering__total-item  
                                    p.product-ordering__total-key Вместе
                                    p.product-ordering__total-value 38 800 ₽
                                    
                            .product-ordering__item.product-ordering__item_btn-wrapper
                                button.btn-link.btn-link_fill-black(type="submit") Оплатить

            //- Товары
            .user-cart-alt__items-total
            
                p.user-cart-alt__title корзина

                .user-cart-alt__items

                    .ui-card.ui-card_small.user-cart-alt__item
                        .ui-card__container
                            picture.ui-card__picture 
                                img(src='./img/ui-card-1.png' alt="" loading="lazy").ui-card__img
                            .ui-card__content
                                p.text.ui-card__name Платье-миди на прямом корсете
                                p.text.ui-card__code Артикул: 00001868
                                .ui-card__sizes-and-colors
                                    .ui-card__sizes
                                        p.text.ui-card__size XS
                                    .ui-card__colors
                                        p.ui-card__color(style="--bgColor:#03A3BD")
                                .ui-card__prices-and-delete 
                                    p.ui-card__price 14 000 ₽
                                    p.ui-card__delete удалить

                    .ui-card.ui-card_small.user-cart-alt__item
                        .ui-card__container
                            picture.ui-card__picture 
                                img(src='./img/ui-card-1.png' alt="" loading="lazy").ui-card__img
                            .ui-card__content
                                p.text.ui-card__name Платье-миди на прямом корсете
                                p.text.ui-card__code Артикул: 00001868
                                .ui-card__sizes-and-colors
                                    .ui-card__sizes
                                        p.text.ui-card__size XS
                                    .ui-card__colors
                                        p.ui-card__color(style="--bgColor:#03A3BD")
                                .ui-card__prices-and-delete 
                                    p.ui-card__price 14 000 ₽
                                    p.ui-card__delete удалить

                    .ui-card.ui-card_small.user-cart-alt__item
                        .ui-card__container
                            picture.ui-card__picture 
                                img(src='./img/ui-card-1.png' alt="" loading="lazy").ui-card__img
                            .ui-card__content
                                p.text.ui-card__name Платье-миди на прямом корсете
                                p.text.ui-card__code Артикул: 00001868
                                .ui-card__sizes-and-colors
                                    .ui-card__sizes
                                        p.text.ui-card__size XS
                                    .ui-card__colors
                                        p.ui-card__color(style="--bgColor:#03A3BD")
                                .ui-card__prices-and-delete 
                                    p.ui-card__price 14 000 ₽
                                    p.ui-card__delete удалить
                        
                .user-cart-alt__total
                    .user-cart-alt__total-items
                        .user-cart-alt__total-item.user-cart-alt__total-item_delivery
                            p.user-cart-alt__total-key Доставка
                            p.user-cart-alt__total-value 0₽
                        .user-cart-alt__total-item
                            p.user-cart-alt__total-key Вместе
                            p.user-cart-alt__total-value 38 800 ₽
